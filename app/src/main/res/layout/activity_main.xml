<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actionbar_tab_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <com.andexert.library.RippleView
            android:id="@+id/rv_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            rv_centered="true">

            <ImageView
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:src="@drawable/main_study_off"
                android:layout_centerInParent="true"/>

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rv_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            rv_centered="true">

            <ImageView
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:src="@drawable/main_quiz_off"
                android:layout_centerInParent="true"/>

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            rv_centered="true">

            <ImageView
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:src="@drawable/main_review_off"
                android:layout_centerInParent="true"/>

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            rv_centered="true">

            <ImageView
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:src="@drawable/main_preview_off"
                android:layout_centerInParent="true"/>

        </com.andexert.library.RippleView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="광고영역"/>
    </LinearLayout>
</LinearLayout>
