<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_period0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/ancient"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="TEST" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_period1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/medieval"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="고대국가" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_period2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/pagoda"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="고려시대" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_period3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/fortress"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="조선초기" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_period4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/war"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="조선" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_period5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/southkorea"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="근대사" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_period6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/pagoda"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="일제강점기" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_period7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/bt_period7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/fortress"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_period7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="TEST" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>